#!/bin/sh

start() {
  hostname minx-$RANDOM
}

stop() {
  echo "I cannot do that :("
  sleep 1
}

restart() {
  stop
  sleep 1
  start
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart|reload)
    restart
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
esac

exit $?

